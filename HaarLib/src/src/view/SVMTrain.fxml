<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="apTrainWindow" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controller.SVMTrainController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="400.0" prefWidth="199.0" spacing="20.0">
               <children>
                  <Button fx:id="btnTrain" mnemonicParsing="false" onAction="#trainOnClick" prefHeight="25.0" prefWidth="53.0" text="Train" />
                  <TextField fx:id="txtBoxSeed" promptText="Seed" />
                  <TextField fx:id="txtBoxWidthImage" promptText="Width" />
                  <ComboBox fx:id="cmbType" prefWidth="150.0" promptText="Descriptor Method" />
                  <VBox prefHeight="61.0" prefWidth="199.0" spacing="5.0" style="-fx-border-insets: 1;">
                     <children>
                        <Button fx:id="btnBrowsImage" mnemonicParsing="false" onAction="#browsImageOnClick" text="Brows Image File" />
                        <Label fx:id="lblImageLocation" text="Image Folder" />
                     </children>
                  </VBox>
                  <VBox prefHeight="120.0" prefWidth="199.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnBrowsClassification" mnemonicParsing="false" onAction="#browsClassificationOnClick" text="Brows Save Classificarion" />
                        <Label fx:id="lblClassificationLocation" text="Classification Folder" />
                        <Button fx:id="btnSaveClasification" mnemonicParsing="false" onAction="#saveClasssificationOnClilck" text="Save" />
                        <TextField fx:id="txtBoxFileName" promptText="File Name" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="5.0" top="5.0" />
               </padding>
            </VBox>
            <TextArea fx:id="txtAreaStatus" prefHeight="400.0" prefWidth="401.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
